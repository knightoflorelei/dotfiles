# -------------------------------------------------------- #
# ------------------ Custom Functions -------------------- #
# -------------------------------------------------------- #

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  touch $ans
}}

cmd unarchive ${{
  case "$f" in
      *.zip)
      unzip "$f"
      ;;
      *.tar.gz)
      tar -xzvf "$f"
      ;;
      *.tar.bz2)
      tar -xjvf "$f"
      ;;
      *.tar)
      tar -xvf "$f"
      ;;
      *)
      echo "Unsupported format!"
      ;;
  esac
}}

cmd save-lwd ${{
  pwd > ~/.config/lf/lf-lwd
}}



































# -------------------------------------------------------- #
# -------------------- Basic Options --------------------- #
# -------------------------------------------------------- #

# Always show hidden directories and files
set hidden on

# Always show icons
set icons

# Ignore case for search and sorting
set ignorecase on

# Ignore diacritics for search and sorting
set ignoredia on

# Set column ratios
set ratios 2:5

# Set what information is shown besides file/folder names
set info size:time

# Set character used when truncating file/folder names
set truncatechar â€¦

# Allow search to wrap around the file list
set wrapscan on

# Allow scrolling to wrap around the file list
set wrapscroll on




