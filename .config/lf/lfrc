# -------------------------------------------------------- #
# ------------------ Custom Keybindings ------------------ #
# -------------------------------------------------------- #

# unregister some bindings
map d
map m
map o
map n
map y
map p
map w

# basic functions
map q :save-lwd; quit
map dd delete
map mf mkfile
map md mkdir
map <enter> open
map zz unarchive
map x cut
map c copy
map v paste



# navigations
map gh cd ~
map gd cd ~/Documents
map gw cd ~/Downloads
map gp cd ~/Pictures
map gc cd ~/.config
map gv cd ~/Videos
map gm cd ~/Music
